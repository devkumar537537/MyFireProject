<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.TypeofUserFragment">

    <RelativeLayout
        android:id="@+id/usertype_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slogontext"
            android:text="Lorem Ipsume"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="25sp"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/addcontent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Type of User"
        android:textSize="35sp"
        android:padding="5dp"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usertype_toolbar_layout" />

    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/addcontent_text"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        >




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:id="@+id/show_appliesuser"
            android:layout_margin="8dp"

            android:background="@drawable/buttonbackground"

            android:padding="8dp"
            android:text="Applied Users"
            android:textAllCaps="false"
            android:textColor="@color/text_color_with_red"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_regitsteruser"
            android:layout_margin="8dp"

            android:background="@drawable/buttonbackground"

            android:padding="8dp"
            android:text="Registered Users"
            android:textAllCaps="false"
            android:textColor="@color/text_color_with_red"
            android:textSize="18sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>