<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="adminlogin"
            type="com.cbitss.nziftaadmin.viewmodels.UserTypeModel" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Login">

        <RelativeLayout
            android:id="@+id/usertype_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="363dp"
                android:padding="10dp"
                android:src="@drawable/logo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/slogontext"
                android:text="Lorem Ipsume"
                android:padding="10dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="25sp"/>


        </RelativeLayout>
        <TextView
            android:id="@+id/addcontent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin LogIn"
            android:textSize="40dp"

            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usertype_toolbar_layout" />
        <RelativeLayout
            android:id="@+id/admin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/addcontent_text"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"

            >



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_below="@+id/item_banner"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email"
                    android:text="@={adminlogin.email}"
                    android:maxLines="20"
                    android:textColor="@color/colorPrimary" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_below="@+id/item_title"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password"
                    android:text="@={adminlogin.password}"
                    android:maxLines="20"
                    android:textColor="@color/colorPrimary" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"

                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/buttonbackground"
                android:onClick="@{adminlogin::adminlogin}"
                android:padding="8dp"
                android:text="@string/submint_text"
                android:textAllCaps="false"
                android:textColor="@color/text_color_with_red"
                android:textSize="18sp" />




        </RelativeLayout>

        <ProgressBar
            android:id="@+id/adminlogin_progressbasr"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.557" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
